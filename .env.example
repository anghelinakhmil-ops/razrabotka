# ===========================================
# NAKO Agency — Environment Variables
# ===========================================
# Copy this file to .env.local and fill in the values

# Email (Resend)
# Get your API key at https://resend.com
RESEND_API_KEY=re_xxxxxxxxxxxx

# Email to receive lead notifications
NOTIFICATION_EMAIL=hello@nakoagency.com

# Email sender address (must be verified in Resend)
FROM_EMAIL=NAKO Agency <noreply@nakoagency.com>

# Telegram Bot (Phase 8.12)
# Create a bot via @BotFather
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_CHAT_ID=-1001234567890

# Logging
# Set to "true" to save leads to JSON file in production
LOG_LEADS_TO_FILE=false

# Analytics (Phase 12)
# Google Analytics 4 — get Measurement ID from GA4 Dashboard
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
