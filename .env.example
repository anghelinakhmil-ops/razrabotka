# ===========================================
# NAKO Agency — Environment Variables
# ===========================================
# Copy this file to .env.local and fill in the values

# Fastmail SMTP (for sending lead notifications)
# Create App Password: Fastmail → Settings → Privacy & Security → App Passwords
SMTP_HOST=smtp.fastmail.com
SMTP_PORT=465
SMTP_USER=hello@nakoagency.com
SMTP_PASS=your_app_password_here

# Email to receive lead notifications
NOTIFICATION_EMAIL=leads@nakoagency.com

# Email sender address
FROM_EMAIL=NAKO Agency <hello@nakoagency.com>

# Telegram Bot
# Create a bot via @BotFather
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_CHAT_ID=-1001234567890

# Logging
# Set to "true" to save leads to JSON file in production
LOG_LEADS_TO_FILE=false

# Analytics
# Google Analytics 4 — get Measurement ID from GA4 Dashboard
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
